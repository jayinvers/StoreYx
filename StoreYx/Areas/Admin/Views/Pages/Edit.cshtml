@model StoreYx.Models.Page

@{
    ViewData["Title"] = "修改单页";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="form-label" for="Title">标题</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="Subtitle">副标题</label>
                <input asp-for="Subtitle" class="form-control" />
                <span asp-validation-for="Subtitle" class="text-danger"></span>
            </div>
            <div class="d-lg-flex">
                <div class="form-group mb-3 flex-fill">
                    <label class="form-label" for="Path">页面路径 (例如: /about/us)</label>
                    <input asp-for="Path" class="form-control" />
                    <span asp-validation-for="Path" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 ms-3 flex-fill">
                    <label for="Thumbnail" class="form-label">缩略图</label>
                    <input asp-for="Thumbnail" class="form-control" />
                    <span asp-validation-for="Thumbnail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="Description">摘要</label><span asp-validation-for="Description" class="text-danger"></span>
                <textarea asp-for="Description" class="form-control" rows="4" type="text" id="BodyInputField">
                </textarea>

            </div>
            <link rel="stylesheet" href="/editormd/css/editormd.css" />
            <div class="form-group mb-3">
                <label class="form-label" for="Body">正文 (Markdown 格式)</label> <span asp-validation-for="MarkdownBody" class="text-danger"></span>
                <div id="editor">
                    <textarea asp-for="MarkdownBody" style="display:none;" type="text" id="BodyInputField">
                </textarea>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    @{
    await Html.RenderPartialAsync("_EditormdPartial");
}
}
